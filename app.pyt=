from flask import Flask, request, jsonify
from flask_cors import CORS

app = Flask(__name__)
CORS(app)

@app.route('/')
def home():
    return "Mobile Flight Planner API is running!"

@app.route('/generate_flight_plan', methods=['POST'])
def generate_flight_plan():
    data = request.json
    return jsonify({"message": "Flight plan generated!", "data": data})

if __name__ == '__main__':  
    app.run(host="0.0.0.0", port=8000, debug=True)
                                                                                       
